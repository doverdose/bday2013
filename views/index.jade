extends layout

block content
	div.container
	h1.white-script Happy Birthday!
	div.media
		a.pull-left(href='#')
			img.img-polaroid.media-object(src='images/righton.jpg')
		div.media-body
			h3.white-script.media-heading Like, totally come to SoCal!
	div#sdPhotos.carousel.slide.top-buffer
		ol.carousel-indicators
			li(data-target='#sdPhotos', data-slide-to='0').active
			li(data-target='#sdPhotos', data-slide-to='1')
			li(data-target='#sdPhotos', data-slide-to='2')
			li(data-target='#sdPhotos', data-slide-to='3')
			li(data-target='#sdPhotos', data-slide-to='4')
			li(data-target='#sdPhotos', data-slide-to='5')
			li(data-target='#sdPhotos', data-slide-to='6')
			li(data-target='#sdPhotos', data-slide-to='7')
			li(data-target='#sdPhotos', data-slide-to='8')
			li(data-target='#sdPhotos', data-slide-to='9')
			li(data-target='#sdPhotos', data-slide-to='10')
		div.carousel-inner
			div.item.carousel-height.active
				img(src='images/1.jpg').img-polaroid.carousel
				div.carousel-caption
					h4.white-script We'll go to an old school amusement park
			div.item.carousel-height
				img(src='images/2.jpg').img-polaroid.carousel
				div.carousel-caption
					h4.white-script Get the view from the top
			div.item.carousel-height 
				img(src='images/3.jpg').img-polaroid.carousel
				div.carousel-caption
					h4.white-script See a decent sunset or two
			div.item.carousel-height  
				img(src='images/4.jpg').img-polaroid.carousel
				div.carousel-caption
					h4.white-script Have you ever tried Din Tai Fung? I think you might like it
			div.item.carousel-height 
				img(src='images/5.jpg').img-polaroid.carousel
				div.carousel-caption
					h4.white-script Indulge in chocolate cake, San Diego style
			div.item.carousel-height  
				img(src='images/6.jpg').img-polaroid.carousel
				div.carousel-caption
					h4.white-script Seriously, the sunsets don't suck 
			div.item.carousel-height 
				img(src='images/7.jpg').img-polaroid.carousel
				div.carousel-caption
					h4.white-script Snorkel with Garibaldis
			div.item.carousel-height  
				img(src='images/8.jpg').img-polaroid.carousel
				div.carousel-caption
					h4.white-script Go on a meerkat safari
			div.item.carousel-height 
				img(src='images/9.jpg').img-polaroid.carousel
				div.carousel-caption
					h4.white-script Get the best tacos this side of Mexico
			div.item.carousel-height 
				img(src='images/10.jpg').img-polaroid.carousel
				div.carousel-caption
					h4.white-script And picnic with the pines
		a(href='#sdPhotos', data-slide='prev').carousel-control.left &lsaquo;
		a(href='#sdPhotos', data-slide='next').carousel-control.right &rsaquo;
	div
		button#more.btn.btn-info.large-font Let's go!